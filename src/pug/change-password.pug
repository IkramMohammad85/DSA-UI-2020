doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Custom CSS
  link(rel='stylesheet', href='assets/css/style.css', type='text/css' )
  link(rel='stylesheet', href='assets/css/vendor/glide.css', type='text/css' )
  title Dezan Shira & Associates!
body
  #wrapper
    include components/_header-logged-in      
    section.pt-150.pb-7
        .container
            .grid
                .col-sm.col-md-3.col-lg-3.col-grid
                        h4.section-title.mb-0 Welcome IKRAM
                        ul.list-unstyled.sidebar-nav
                            li
                                a Credit: 0
                            li
                                a(href='https://www.dezshira.com/member') Dashboard
                            li
                                a(href='https://www.dezshira.com/member/profile') Job Seeker Profile
                            li
                                a(href='http://www.asiabriefing.com/member/recharge') Recharge Credits
                            li
                                a(href='https://www.dezshira.com/member/credit_coupon') Claim Credit
                            li
                                a(href='https://www.dezshira.com/member/gift_credit') Gift Credits
                            li
                                a(href='https://www.dezshira.com/member/history') Your Transaction History
                            li.active
                                a(href='https://www.dezshira.com/member/change-password') Change Password
                            li
                                a(href='https://www.dezshira.com/member/logout') Logout 
                .col-sm.col-md-9.col-lg-9.col-grid
                    h4.section-title.mb-3 Change your account password
                    form.material(action='https://www.dezshira.com/events/search', method='GET')
                        .grid
                            .col-sm.col-mb.col-lg
                                .form-field
                                    .form-field-control
                                        input#current_password.form-field-input(type='password', placeholder=' ')
                                        label.form-field-label(for='current_password') Your current password
                                        .form-field-bar
                            .col-sm.col-mb.col-lg
                                .form-field
                                    .form-field-control
                                        input#new_password.form-field-input(type='password', placeholder=' ')
                                        label.form-field-label(for='new_password') New Password
                                        .form-field-bar
                            .col-sm.col-mb.col-lg
                                .form-field
                                    .form-field-control
                                        input#retype_new_password.form-field-input(type='password', placeholder=' ')
                                        label.form-field-label(for='retype_new_password') Retype New Password
                                        .form-field-bar
                            .col-sm.col-mb.col-lg               
                                button.btn.btn-primary.center-block(type='submit') CHANGE PASSWORD 

                                                                                                                                           
    include components/_footer

