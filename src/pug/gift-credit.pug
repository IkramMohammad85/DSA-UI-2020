doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Custom CSS
  link(rel='stylesheet', href='assets/css/style.css', type='text/css' )
  link(rel='stylesheet', href='assets/css/vendor/glide.css', type='text/css' )
  title Dezan Shira & Associates!
body
  #wrapper
    include components/_header-logged-in      
    section.pt-150.pb-7
        .container
            .grid
                .col-sm.col-md-3.col-lg-3.col-grid
                        h4.section-title.mb-0 Welcome IKRAM
                        ul.list-unstyled.sidebar-nav
                            li
                                a Credit: 0
                            li
                                a(href='member.html') Dashboard
                            li
                                a(href='profile.html') Job Seeker Profile
                            li
                                a(href='profile.html') Recharge Credits
                            li
                                a(href='credit-coupon.html') Claim Credit
                            li
                                a(href='gift-credit.html') Gift Credits
                            li
                                a(href='history.html') Your Transaction History
                            li.active
                                a(href='change-password.html') Change Password
                            li
                                a(href='login.html') Logout 
                .col-sm.col-md-9.col-lg-9.col-grid
                    h4.section-title.mb-3 Transfer Credits
                    h2.text-center.mb-3 Your Credit Balance: 0
                    form.material(action='https://www.dezshira.com/events/search', method='GET')
                        .grid
                            .col-sm.col-mb.col-lg
                                .form-field
                                    .form-field-control
                                        input#credit_received_name.form-field-input(type='text', placeholder=' ')
                                        label.form-field-label(for='credit_received_name') Receiver's Name
                                        .form-field-bar
                            .col-sm.col-mb.col-lg
                                .form-field
                                    .form-field-control
                                        input#email.form-field-input(type='email', placeholder=' ')
                                        label.form-field-label(for='email') Receiver's Email
                                        .form-field-bar
                            .col-sm.col-mb.col-lg
                                .form-field
                                    .form-field-control
                                        input#credit.form-field-input(type='number', placeholder=' ')
                                        label.form-field-label(for='credit') How many credits you would like to transfer?
                                        .form-field-bar
                            .col-sm.col-mb.col-lg               
                                button.btn.btn-primary.center-block(type='submit') TRANSFER 

                                                                                                                                           
    include components/_footer

    //JavaScript
    //- script(src="assets/js/glide.min.js")
    script(src="assets/js/list.min.js")
    script(src="assets/js/scripts.js")